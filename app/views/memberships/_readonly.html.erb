<div class="row">
  <div class="col-sm-6">
    <%= render "shared/errors", record: @membership %>
  </div>
</div>

<% @project.memberships.each do |membership| %>
  <div class="row">
    <div class="col-md-2">
      <%= link_to membership.user.full_name, user_path(membership.user) %>
    </div>
    <div class="col-md-2">
      <%= membership.role %>
    </div>
    <br><br>
  </div>
<% end %>
