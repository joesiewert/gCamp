<div class="page-header">
  <h1>
    Users
      <div class="pull-right">
        <%= link_to "Create User", new_user_path, class: "btn btn-primary" %>
      </div>
  </h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th><h4>Name</h4></th>
      <th><h4>Email</h4></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= "#{user.first_name} #{user.last_name}" %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
