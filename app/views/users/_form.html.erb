<%= form_for(@user) do |f| %>
  <div class="form-horizontal" role="form">
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= render "shared/errors", record: @user %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :first_name, :class => "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :first_name, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :last_name, :class => "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :last_name, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :email, :class => "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :email, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :password, class: "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :password_confirmation, class: "control-label" %>
      </div>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-2">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
    <% unless @user.created_at.nil? %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5 well text-center">
          <%= link_to "Delete User", user_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
