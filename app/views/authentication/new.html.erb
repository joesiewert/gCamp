<%= form_tag signin_path do |f| %>
  <div class="row">
    <div class="well col-md-offset-4 col-md-4" role="form">
      <h2>Sign in to gCamp!</h2>

      <% if @sign_in_error %>
        <p class="text-danger">
          <%= @sign_in_error %>
        </p>
      <% end %>

      <div class="form-group">
        <%= label_tag :email, nil, class: "control-label" %>
      </div>
      <div class="form-group">
        <%= email_field_tag :email, nil, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password, nil, class: "control-label" %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
      <div class=form_group>
        <%= submit_tag "Sign In", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
