<%= page_header "Projects" do %>
  <%= link_to "Create Project", new_project_path, class: "btn btn-primary" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th><h4>Name</h4></th>
      <th><h4>Members</h4></th>
      <th><h4>Tasks</h4></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td><%= link_to project.memberships.count, project_memberships_path(project) %></td>
        <td><%= link_to project.tasks.count, project_tasks_path(project) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless current_user.tracker_token.nil? %>
  <div class="page-header">
    <h1>Pivotal Tracker Projects</h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th><h4>Name</h4></th>
      </tr>
    </thead>

    <tbody>
      <% @tracker_projects.each do |project| %>
        <tr>
          <td><%= link_to project[:name], tracker_stories_path(project[:id]) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
