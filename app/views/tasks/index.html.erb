<div class="page-header">
  <h1>Tasks <%= link_to "Create Task", new_task_path, class: "btn btn-primary pull-right" %></h1>
</div>

<div class="page-header">
  <h4>Description</h4>
</div>

<% @tasks.each do |task| %>
  <%= task.description %>
    <div class="pull-right">
      <%= link_to 'Show', task, class: "btn btn-success" %>
      <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
      <%= link_to 'Destroy', task, class: "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <hr>
<% end %>
