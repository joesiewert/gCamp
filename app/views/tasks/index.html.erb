<div class="page-header">
  <h1>Tasks <%= link_to "Create Task", new_task_path, class: "btn btn-primary pull-right" %></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th><h4>Description</h4></th>
      <th><h4>Complete</h4></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete.to_s.capitalize %></td>
        <td>
          <div class="pull-right">
            <%= link_to 'Show', task, class: "btn btn-success" %>
            <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
