<div class="page-header">
  <h1>
    <%= @task.description %>
    <div class="pull-right">
      <%= link_to "Edit", edit_project_task_path(@project, @task), class: "btn btn-info" %>
    </div>
  </h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li><%= link_to "Tasks", project_tasks_path(@project) %></li>
  <li class="active">Show</li>
</ol>

<p>
  <strong>Due:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>Complete:</strong>
  <%= @task.complete.to_s.capitalize %>
</p>

<h3>Comments</h3>
<% @task.comments.each do |comment| %>
  <div class="row">
    <div class="col-md-3">
      <%= link_to comment.user.full_name, user_path(comment.user) %>
      <div class="text-muted">
        <%= time_ago_in_words(comment.created_at).capitalize %> ago
      </div>
    </div>
    <div class="col-md-9">
      <%= comment.message %>
    </div>
  </div>
  <br>
<% end %>

<% if current_user.present? %>
  <%= form_for [@project, @task, @comment] do |f| %>
  <div class="form-horizontal">
    <div class="form-group">
      <div class="col-md-offset-3 col-md-9">
        <%= f.text_area :message, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-3 col-md-9">
        <%= f.submit "Add Comment", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
<% else %>
  <div class="col-md-offset-3">
    <%= link_to 'Sign In To Comment', signin_path, class: "btn btn-primary" %>
  </div>
<% end %>
